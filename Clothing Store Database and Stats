--display the database ordered by price.
SELECT * FROM ClothingStore;
SELECT * FROM ClothingStore ORDER BY price asc;

--displact the total number of items/stock in the store
SELECT sum(quantity) FROM ClothingStore;

--what is the avg price of items in the store? 
SELECT AVG(price) FROM ClothingStore;
